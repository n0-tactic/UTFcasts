- @categories.each do |i|
  table
    tr
      td.title
        = link_to i.title, i
      td.edit
        = link_to 'Удалить', i, method: :delete, data: { confirm: "Удалить #{i.title}?"}
      td.delete
        = link_to 'Редактировать', edit_category_path(i)
      td.count
        = @posts.where("category_id = #{i.id}").count
